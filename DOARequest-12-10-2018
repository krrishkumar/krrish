      <!--Script for Tab section Added by Suman 27-Sep_2018 -->
      <script>
      var showNextTab = 0;
         var currentTab = 0; // Current tab is set to be the first tab (0)
         showTab(currentTab); // Display the crurrent tab
         
         function showTab(n) {
         // This function will display the specified tab of the form...
         var x = document.getElementsByClassName("tab");
         console.log('tab x========='+JSON.stringify(x));
         x[n].style.display = "block";
         //... and fix the Previous/Next buttons:
         if (n == 0) {
          document.getElementById("prevBtn").style.display = "none";
         } else {
          document.getElementById("prevBtn").style.display = "inline";
         }
         if (n == (x.length - 1)) {
          document.getElementById("nextBtn").style.display = "none";
          document.getElementById("submitBtn").style.display = "inline";
         } else {
          document.getElementById("nextBtn").style.display = "inline";
          document.getElementById("submitBtn").style.display = "none";
         }
         //... and run a function that will display the correct step indicator:
         console.log('n========='+n);
         fixStepIndicator(n)
             {
             // This function removes the "active" class of all steps...
             var i, x = document.getElementsByClassName("step");
             for (i = 0; i < x.length; i++) {
             x[i].className = x[i].className.replace(" active", " active");
             }
             //... and adds the "active" class on the current step:
             x[n].className += " ";
             
             }
         }
         
          
         function nextPrev(n) {
         
         
         console.log('n=========='+n);
          var fnamecus = document.getElementById("{!$Component.fnamec}").value;
          var lnamecus = document.getElementById("{!$Component.lnamec}").value;
          var companycus = document.getElementById("{!$Component.companyc}").value;
          var emailcus = document.getElementById("{!$Component.emailc}").value;
          var mobilecus = document.getElementById("{!$Component.mobilec}").value;
          var streetcus = document.getElementById("{!$Component.streetc}").value;
          var citycus = document.getElementById("{!$Component.cityc}").value;
          var statecus = document.getElementById("{!$Component.statec}").value;
          var countrycus = document.getElementById("{!$Component.countryc}").value;
          var zipccus = document.getElementById("{!$Component.zipc}").value;
          
          
          
          var fnamedel = document.getElementById("{!$Component.fnamed}").value;
          var lnamedel = document.getElementById("{!$Component.lnamed}").value;
          var companydel = document.getElementById("{!$Component.companyd}").value;
          var emaildel = document.getElementById("{!$Component.emaild}").value;
          var mobiledel = document.getElementById("{!$Component.phoned}").value;
          var streetdel = document.getElementById("{!$Component.streetd}").value;
          var citydel = document.getElementById("{!$Component.cityd}").value;
          var statedel = document.getElementById("{!$Component.stated}").value;
          var countrydel = document.getElementById("{!$Component.countryd}").value;
          var zipdel = document.getElementById("{!$Component.zipd}").value;


          
          if(fnamecus !=null && fnamecus != '' && lnamecus !=null && lnamecus !=''&& companycus !=null && companycus !=''&& emailcus !=null && emailcus !=''&& mobilecus !=null && mobilecus !=''&& streetcus !=null && streetcus !=''&& citycus !=null && citycus !=''&& statecus !=null && statecus !=''&& countrycus !=null && countrycus !=''&& zipccus !=null && zipccus !='' && showNextTab == 0){
          showNextTab =1;
           showNext(n);

          }
          else if(fnamedel !=null && fnamedel !='' && lnamedel !=null && lnamedel !=''&& companydel !=null && companydel !=''&& emaildel !=null && emaildel !=''&& mobiledel !=null && mobiledel !=''&& streetdel !=null && streetdel !=''&& citydel !=null && citydel !=''&& statedel !=null && statedel !=''&& countrydel !=null && countrydel !=''&& zipdel !=null && zipdel !='' && showNextTab == 1){

           showNext(n);
          
          }
          
          else{
          document.getElementById("myText").innerHTML = "Please fill required fields:";
          
          }
          
       
         }
         
         
         
         function fixStepIndicator(n) {
         // This function removes the "active" class of all steps...
         var i, x = document.getElementsByClassName("step");
         for (i = 0; i < x.length; i++) {
         x[i].className = x[i].className.replace(" active", " active");
         }
         //... and adds the "active" class on the current step:
         x[n].className += " active";
         
         }
         
         function showNext(n){
         if(n== -1){
         showNextTab =showNextTab -1;
         
         }
             // This function will figure out which tab to display
         var x = document.getElementsByClassName("tab");
         // Exit the function if any field in the current tab is invalid:
         //if (n == 1 && !validateForm()) return false;
         // Hide the current tab:
         x[currentTab].style.display = "none";
         // Increase or decrease the current tab by 1:
         currentTab = currentTab + n;
         // if you have reached the end of the form...
         if (currentTab >= x.length) {
          // ... the form gets submitted:
          document.getElementById("doa").submit();
          return false;
         }
         // Otherwise, display the correct tab:
         showTab(currentTab);
                    document.getElementById("myText").innerHTML = " ";
         
         }
         
         
      </script>
      <!--product add table script-->
      <script>
         function addRow(tableID) {
         
         var table = document.getElementById(tableID);
         
         var rowCount = table.rows.length;
         var row = table.insertRow(rowCount);
         
         var colCount = table.rows[0].cells.length;
         
         for(var i=0; i<colCount; i++) {
         
             var newcell = row.insertCell(i);
         
             newcell.innerHTML = table.rows[0].cells[i].innerHTML;
             //alert(newcell.childNodes);
             switch(newcell.childNodes[0].type) {
                 case "text":
                         newcell.childNodes[0].value = "";
                         break;
                 case "checkbox":
                         newcell.childNodes[0].checked = false;
                         break;
                 case "select-one":
                         newcell.childNodes[0].selectedIndex = 0;
                         break;
             }
         }
         
         }
         
         function deleteRow(tableID) {
         try {
         var table = document.getElementById(tableID);
         var rowCount = table.rows.length;
         console.log('rowCount'+rowCount);
         for(var i=0; i<rowCount; i++) {
             var row = table.rows[i];
             var chkbox = row.cells[0].childNodes[0];
             if(null != chkbox && true == chkbox.checked) {
                 if(rowCount <= 1) {
                     alert("Cannot delete all the rows.");
                     break;
                 }
                 table.deleteRow(i);
                 rowCount--;
                 i--;
             }
         
         
         }
         }catch(e) {
             alert(e);
         }
         
         }
         
      </script>
