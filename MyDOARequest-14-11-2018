<script>
function printData()
{
   var divToPrint=document.getElementById("demoRequestTable");
   newWin= window.open("");
   newWin.document.write(divToPrint.outerHTML);
   newWin.print();
   newWin.close();
}

$('button').on('click',function(){
printData();
})

</script>

