/*
        Author: Krrish
        Created Date: 01/11/2018
        Created For: This apex class is implemented for creation of subuser having record type sub dealer on Contact object.
*/


public class subuserCntrl {

 
 public List<contact> conlist{get;set;}
 public Set<Integer> selectcheckbox;
 public Contact cono;
 Id subDealerId;
 
 // constructor for getting current id from the url on page load and also get the id of sub dealer record type.
 public subuserCntrl(){
   
   string currentid = apexpages.currentpage().getparameters().get('id'); 
   
    cono=[Select id,Name,Accountid from contact where id=:currentid limit 1];
   
   subDealerId = Schema.SObjectType.Contact.RecordTypeInfosByName.get('Sub Dealer').RecordTypeId;
   selectcheckbox = new Set<Integer>();
      
     conlist=new List<contact>();
     contact con=new contact();
     con.RecordTypeId = subDealerId;
     con.Accountid = cono.Accountid;
     con.Inactive__c = true;
     conlist.add(con);
 }
    // Adding contacts as a subdealer under the same account associated to Dealer.
    public void addproductrow(){
    
    contact cc=new contact();
    cc.RecordTypeId = subDealerId ;
    cc.Accountid =  cono.Accountid;
    cc.Inactive__c = true;
    conlist.add(cc);
    
    }
    
    //Added the selected checkbox into the list of integer 

    public void checkFunction(){
   
      string pp=apexpages.currentpage().getparameters().get('checkboxcheck');
      selectcheckbox.add( Integer.valueof(pp));
       }
    //Delete the selected row
      public void DelProductRow(){
           Integer k = conlist.size();  
                               
          for(Integer i=k-1;i>0;i--){
          if(selectcheckbox.contains(i)){
           conlist.remove(i);
           selectcheckbox.remove(i);
                  }
          }
          
    }
    
    // insertion of the subuser into the database and same redirect to another page.
    public PageReference doSave(){
     
     if(conlist.size()>0){
      insert conlist;
     }
     
     String currentuserid = apexpages.currentpage().getparameters().get('id'); 
     PageReference pr = new PageReference('/apex/DistributorSubUserList_MMD?id='+currentuserid);
     pr.setRedirect(true); 
     return pr;
    }
    
    // this function redirect to view all subusers. 
    public PageReference doViewallUser(){
    
     String currentuserid = apexpages.currentpage().getparameters().get('id'); 
     PageReference pr = new PageReference('/apex/DistributorSubUserList_MMD?id='+currentuserid);
     pr.setRedirect(true);
     return pr;    
    }
    
}
