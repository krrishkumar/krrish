    public DistributorViewDetailsCntrl_Clone() {
        PageId = ApexPages.currentPage().getParameters().get('id');
        SHowpage = false;
        showdragANDdrop = false;
        showComment = false;
        showModal1 = false;
        showModal2 = false;
        string conid = apexpages.currentpage().getparameters().get('id');
        con = new contact();
        con = [select id, name from contact where id =:conid];
    }
    //To get data of Case    
    public case getcaseView() {
        string conid = apexpages.currentpage().getparameters().get('id');
        string caseid = apexpages.currentpage().getparameters().get('caseid');
        case cas = new case();
        cas = [select Id, Contact.Name, Contact_Name__c, CreatedDate, createdDate__c, LastModifiedDate, lastModifiedDate__c, Owner.Name, Purchase_Date_F__c, Complaint_Type__c, Complain_Number1__c, Purchase_Date__c, Extended_Warranty_Taken__c, Contactid, Model_Number__c, ContactEmail, Extended_Warranty_Duration__c, Status, Case_Number__c, CaseNumber, Product__r.Name, Product_List__c, Product_Name__c, Description, Reason, Type, Bill_Number__c, If_customer_has_Team_viewer__c, GDPR__c, Product_Family__c, Serial_Number__c from case where id =:caseid];
        system.debug('==cas==='+cas);
        caestypereason = cas.Reason;
        system.debug('====caestypereason====='+caestypereason);
        return cas;
    }
    
    //Added start by krrish 16-01-2016
    public List<Form_Information__c> getforminformation(){
    
     string caseid = apexpages.currentpage().getparameters().get('caseid');
     
     List<Form_Information__c> fcc = new List<Form_Information__c>();
     Case cc = new Case();
    // cc = [select Id,(Select id,Contact_Name__c,Contact_Phone__c,Location__c,Project_description__c,Firmware_version__c,Scalar_version__c,Version__c,Teamviewer_ID__c,Teamviewer_Password__c,Description__c,RecordTypeId,Tool__c,System_Info__c,System_description__c,System__c,Software_version__c,Scalar_firmware__c,NDA_established__c,Monitor_type__c,Monitor_Firmware__c,Installation__c,Device__c,CAM_card_version__c,Cabling_structure__c,App_Version__c,Additional_hardware__c,Units_affected__c from Case_Reason_Information__r) from Case where Id =:caseid ];
   fcc = [Select id,Contact_Name__c,Contact_Phone__c,Location__c,Project_description__c,Firmware_version__c,Scalar_version__c,Version__c,Teamviewer_ID__c,Teamviewer_Password__c,Description__c,RecordTypeId,Tool__c,System_Info__c,System_description__c,System__c,Software_version__c,Scalar_firmware__c,NDA_established__c,Monitor_type__c,Monitor_Firmware__c,Installation__c,Device__c,CAM_card_version__c,Cabling_structure__c,App_Version__c,Additional_hardware__c,Units_affected__c from Form_Information__c  where Case__c=:caseid ];

